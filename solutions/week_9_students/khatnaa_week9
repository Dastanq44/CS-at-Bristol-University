# 6

price_index = (0.5 , 0.75 , 1.20 , 1.50)
print(price_index)

units = float(input("How much energy unit have you consumed:"))

if units<=100:
    cost_u100 = units*price_index[0]
    print("the total is going to be" +cost_u100+ "Pounds")
elif 100<units<=200:
    cost_200 = units*price_index[1]
    print(f"the total is going to be {cost_200 } Pounds")
elif 200<units<=300:
    cost_300 = units*price_index[2]
    print(f"the total is going to be {cost_300 } Pounds")
elif 300<units:
    cost_400 = units*price_index[3]
    print(f"the total is going to be {cost_400 } Pounds")

